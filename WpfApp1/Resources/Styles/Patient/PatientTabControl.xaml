<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type TabControl}" x:Key="PatientTabControl">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="PatientTabItem" TargetType="TabItem">
        <Setter Property="Background" Value="{StaticResource LightestBlueBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DarkBlueBrush}"/>
    </Style>
</ResourceDictionary>
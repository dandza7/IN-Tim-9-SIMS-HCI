<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="NavBarButton" TargetType="Button">
        <Setter Property="Margin" Value="1"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="FontSize" Value="40"></Setter>
        <Setter Property="Background" Value="{StaticResource LightBlueBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{StaticResource AccentBlueBrush}" BorderThickness="2">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation Storyboard.TargetProperty="Background.Color" Duration="0:0:0.3" To="{StaticResource Blue}"></ColorAnimation>
                        <ThicknessAnimation Duration="0:0:0.3" To="1, -100, 1, 1" Storyboard.TargetProperty="Margin" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation Storyboard.TargetProperty="Background.Color" Duration="0:0:0.3" To="{StaticResource LightBlue}"></ColorAnimation>
                        <ThicknessAnimation Duration="0:0:0.3" To="1" Storyboard.TargetProperty="Margin" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="DialogModal" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LightestBlueBrush}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
        <Setter Property="Margin" Value="100 20"></Setter>
    </Style>
    <Style x:Key="OverlayModal" TargetType="Border">
        <Setter Property="Background" Value="#CF0082F0"></Setter>
    </Style>
    <Style x:Key="ErrorModal" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LightestBlueBrush}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="BorderThickness" Value="5"/>
    </Style>
    <Style x:Key="FormLabel" TargetType="Label">
        <Setter Property="FontSize" Value="24"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
    </Style>
    <Style x:Key="FormInputBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="FontSize" Value="24"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    <Style x:Key="FormInputPassword" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="FontSize" Value="24"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    <Style x:Key="FormInputComboBox" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="FontSize" Value="24"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Height" Value="50"></Setter>
        <Setter Property="Padding" Value="5 0"></Setter>
    </Style>
    <Style TargetType="ComboBoxItem">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
    <Style x:Key="ClassicButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="FontSize" Value="25"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{StaticResource AccentBlueBrush}" BorderThickness="2">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimationUsingKeyFrames 
                        Storyboard.TargetProperty="Background.Color"
                        Duration="0:0:0.8">
                            <LinearColorKeyFrame Value="{StaticResource LightBlue}" KeyTime="0:0:0.3" />
                            <LinearColorKeyFrame Value="{StaticResource AccentBlue}" KeyTime="0:0:0.8" />
                        </ColorAnimationUsingKeyFrames>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="ClassicStaticButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="FontSize" Value="25"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{StaticResource AccentBlueBrush}" BorderThickness="2">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimationUsingKeyFrames 
                        Storyboard.TargetProperty="Foreground.Color"
                        Duration="0:0:0.1">
                            <LinearColorKeyFrame Value="{StaticResource LightBlue}" KeyTime="0:0:0.1" />
                        </ColorAnimationUsingKeyFrames>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimationUsingKeyFrames 
                        Storyboard.TargetProperty="Foreground.Color"
                        Duration="0:0:0.1">
                            <LinearColorKeyFrame Value="{StaticResource White}" KeyTime="0:0:0.1" />
                        </ColorAnimationUsingKeyFrames>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="LOIButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="FontSize" Value="25"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimationUsingKeyFrames 
                        Storyboard.TargetProperty="Background.Color"
                        Duration="0:0:0.2">
                            <LinearColorKeyFrame Value="{StaticResource Blue}" KeyTime="0:0:0.2" />
                        </ColorAnimationUsingKeyFrames>
                        <ColorAnimationUsingKeyFrames 
                        Storyboard.TargetProperty="Foreground.Color"
                        Duration="0:0:0.2">
                            <LinearColorKeyFrame Value="{StaticResource White}" KeyTime="0:0:0.2" />
                        </ColorAnimationUsingKeyFrames>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimationUsingKeyFrames 
                        Storyboard.TargetProperty="Background.Color"
                        Duration="0:0:0.8">
                            <LinearColorKeyFrame Value="{StaticResource White}" KeyTime="0:0:0.8" />
                        </ColorAnimationUsingKeyFrames>
                        <ColorAnimationUsingKeyFrames 
                        Storyboard.TargetProperty="Foreground.Color"
                        Duration="0:0:0.2">
                            <LinearColorKeyFrame Value="{StaticResource AccentBlue}" KeyTime="0:0:0.2" />
                        </ColorAnimationUsingKeyFrames>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="InvertedButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource LightBlueBrush}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="FontSize" Value="25"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="BorderThickness" Value="3"></Setter>
    </Style>
    <Style x:Key="Title" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="FontSize" Value="40"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"></Setter>
    </Style>
    <Style x:Key="SmallText" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"></Setter>
    </Style>
    <Style x:Key="NotificationText" TargetType="TextBlock">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="TextWrapping" Value="Wrap"></Setter>
        <Setter Property="Padding" Value="5"></Setter>

    </Style>
    <Style x:Key="ExecutiveDataGrid" TargetType="DataGrid">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="RowBackground" Value="{StaticResource LightestBlueBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource LightBlueBrush}"/>
        <Setter Property="AlternationCount" Value="2"/>
        <Setter Property="FontSize" Value="30"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="BorderThickness" Value="0"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
    </Style>
    <Style x:Key="ExecutiveDGHeader" TargetType="DataGridColumnHeader">
        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
        <Setter Property="Background" Value="{StaticResource BlueBrush}"></Setter>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="FontSize" Value="30"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
    </Style>
    <Style x:Key="ExecutiveDGCell" TargetType="DataGridCell">
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
    </Style>
    <Style x:Key="ExecutiveDGCellSmall" TargetType="DataGridCell">
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
    </Style>
    <Style x:Key="DatePickerExecutive" TargetType="DatePicker">
        <Setter Property="FontFamily" Value="Impact"/>
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="FontSize" Value="20"/>
    </Style>
    <Style x:Key="DescriptionBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="FontFamily" Value="Impact"></Setter>
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"></Setter>
        <Setter Property="TextWrapping" Value="Wrap"></Setter>
        <Setter Property="Padding" Value="10"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    <Style x:Key="CheckBoxExecutive" TargetType="CheckBox">
        <Setter Property="FontFamily" Value="Impact"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"/>
        <Setter Property="Margin" Value="35 0 20 0"/>
    </Style>
</ResourceDictionary>
<Window x:Class="WpfApp1.Service.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:model="clr-namespace:WpfApp1.View.Model"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock ="Top">
            <MenuItem Header="_Patient" Click="ShowPatientOptions">
            </MenuItem>
            <MenuItem Header="_Executive" Click="ShowExecutiveOptions">
            </MenuItem>
            <MenuItem Header="_Doctor" Click="ShowDoctorOptions">
            </MenuItem>
            <MenuItem Header="_Secretary" Click="ShowSecretaryOptions">
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>

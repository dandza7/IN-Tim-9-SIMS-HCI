<Page x:Class="WpfApp1.View.Model.Executive.ExecutiveStatisticsDialogs.DoctorStatistics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.View.Model.Executive.ExecutiveStatisticsDialogs"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="640"
      Title="DoctorStatistics">

    <Grid>
        <Border BorderBrush="{StaticResource DarkestBlueBrush}" BorderThickness="3" Background="{StaticResource OrangeBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding DoctorsName}" Style="{StaticResource Title}" FontSize="64" Grid.ColumnSpan="2"></TextBlock>
                <TextBlock Text="Average Grade" Style="{StaticResource Title}" Grid.Column="0" Grid.Row="2"></TextBlock>
                <TextBlock Text="{Binding AvgGrade}" Style="{StaticResource Title}" Grid.Column="1" Grid.Row="2"></TextBlock>
                <TextBlock Text="Ability" Style="{StaticResource Title}" Grid.Column="0" Grid.Row="3"></TextBlock>
                <TextBlock Text="{Binding Grade1}" Style="{StaticResource Title}" Grid.Column="2" Grid.Row="3"></TextBlock>
                <TextBlock Text="Professionalism" Style="{StaticResource Title}" Grid.Column="0" Grid.Row="4"></TextBlock>
                <TextBlock Text="{Binding Grade2}" Style="{StaticResource Title}" Grid.Column="3" Grid.Row="4"></TextBlock>
                <TextBlock Text="Availability" Style="{StaticResource Title}" Grid.Column="0" Grid.Row="5"></TextBlock>
                <TextBlock Text="{Binding Grade3}" Style="{StaticResource Title}" Grid.Column="4" Grid.Row="5"></TextBlock>
                <TextBlock Text="Treatment" Style="{StaticResource Title}" Grid.Column="0" Grid.Row="6"></TextBlock>
                <TextBlock Text="{Binding Grade4}" Style="{StaticResource Title}" Grid.Column="5" Grid.Row="6"></TextBlock>
                <TextBlock Text="Selection" Style="{StaticResource Title}" Grid.Column="0" Grid.Row="7"></TextBlock>
                <TextBlock Text="{Binding Grade5}" Style="{StaticResource Title}" Grid.Column="5" Grid.Row="7"></TextBlock>
            </Grid>
        </Border>
    </Grid>
</Page>

<UserControl x:Class="WpfApp1.View.Util.TabletMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View.Util"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="45">
            <Button Content="Moj Profil" Style="{StaticResource PatientMenuButton}"/>
            <Button Content="Termini" Style="{StaticResource PatientMenuButton}" Click="ShowAppointments_Click"/>
            <Button Content="Napomene" Style="{StaticResource PatientMenuButton}"/>
            <Button Content="Izveštaji" Style="{StaticResource PatientMenuButton}"/>
        </StackPanel>
    </Grid>
</UserControl>

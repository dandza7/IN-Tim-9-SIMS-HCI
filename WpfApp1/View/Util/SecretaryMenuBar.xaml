<UserControl x:Class="WpfApp1.View.Util.SecretaryMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View.Util"
             mc:Ignorable="d" 
             d:DesignHeight="756" d:DesignWidth="1344">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="756" VerticalAlignment="Center" Width="285">
            <Rectangle Height="140" Stroke="Black" Width="285" Fill="#FF251746" />
            <Button  BorderThickness="0" Name ="SecretaryDashboard" Height="60" Click ="SecretaryDashboard_Click" Style="{StaticResource SecretaryMenuButton}" Padding="0,0,0,0">
                <Grid Height="60" Width="285">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Margin="10,0,0,0" Text="Dasboard"/>
                </Grid>
            </Button>
            <Button BorderThickness="0" Name ="SecretaryPatients" Height="60" Style="{StaticResource SecretaryMenuButton}" Click="SecretaryPatients_Click" BorderBrush="{x:Null}">
                <Grid Height="60" Width="285">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Margin="10,0,0,0" Text="Patients"/>
                </Grid>
            </Button>
            <Button Height="60" Style="{StaticResource SecretaryMenuButton}">
                <Grid Height="60" Width="285">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Margin="10,0,0,0" Text="Appointments"/>
                </Grid>
            </Button>
            <Button Height="60" Style="{StaticResource SecretaryMenuButton}">
                <Grid Height="60" Width="283">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Margin="10,0,0,0" Text="Dynamic Equipment"/>
                </Grid>
            </Button>
            <Button Height="60" Style="{StaticResource SecretaryMenuButton}">
                <Grid Height="60" Width="285">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Margin="10,0,0,0" Text="Meetings"/>
                </Grid>
            </Button>
            <Button Height="60" Style="{StaticResource SecretaryMenuButton}">
                <Grid Height="60" Width="285">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Margin="10,0,0,0" Text="Leave requests"/>
                </Grid>
            </Button>
            <Button Height="60" Style="{StaticResource SecretaryMenuButton}">
                <Grid Height="60" Width="285">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Margin="10,0,0,0" Text="Notifications"/>
                </Grid>
            </Button>
            <Rectangle Height="136" Stroke="Black" Width="285" Fill="#FF251746"/>
            <Button Height="60" Style="{StaticResource SecretaryMenuButton}">
                <Grid Height="30" Width="285" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="144"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Margin="10,0,0,0" Text="Log out" Foreground="White" Grid.ColumnSpan="2"/>
                </Grid>
            </Button>
        </StackPanel>

        <Frame x:Name ="Main" Content="Frame" HorizontalAlignment="Left" Height="614" Margin="290,142,0,0" VerticalAlignment="Top" Width="1059" NavigationUIVisibility="Hidden"/>
        <TextBlock Name="PageHeader" Margin="313,0,0,0" TextWrapping="Wrap" Text="Dashboard" VerticalAlignment="Top" Height="135" Background="White" Foreground="#FF251746" FontSize="72" HorizontalAlignment="Left" Width="1031"/>
    </Grid>
</UserControl>

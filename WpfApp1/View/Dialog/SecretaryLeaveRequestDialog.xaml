<Window x:Class="WpfApp1.View.Dialog.SecretaryLeaveRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View.Dialog"
        xmlns:vm="clr-namespace:WpfApp1.ViewModel.Secretary"
        mc:Ignorable="d"
        Title="SecretaryLeaveRequestDialog" Height="450" Width="800">
    <Window.DataContext>
        <vm:ManageLeaveRequestViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBox Text="{Binding Title, Mode=TwoWay}" Grid.Column="0" FontWeight="Normal" Margin="16,10,400,232" FontSize="17" MaxLength="30"/>
        <Button Content="Accept" HorizontalAlignment="Left" Margin="470,339,0,0" VerticalAlignment="Top" Height="68" Width="124" Command="{Binding Accept}" />
        <Button Content="Deny" HorizontalAlignment="Left" Margin="636,338,0,0" VerticalAlignment="Top" Height="69" Width="136" Command="{Binding Deny}"/>
        <TextBox Text="{Binding Comment, Mode=TwoWay}" HorizontalAlignment="Left" Margin="626,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Height="101"/>
    </Grid>
</Window>

<Window x:Class="WpfApp1.View.Dialog.SecretaryManageAllergiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View.Dialog"
        mc:Ignorable="d"
        Title="SecretaryManageAllergiesDialog" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition  Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Margin="10,50" FontSize="26">Allergy:</Label>
        <TextBox Grid.Column="1" Grid.Row="0" Margin="10,50" Name="allergynameTB"  IsEnabled="False" ></TextBox>
        <Button Grid.Column="1" Grid.Row="1" Content="Add" Click="AddAllergy_Click" Style ="{StaticResource SecretaryPageButton}" Margin ="20" Width="180" />
        <TextBox Name ="patientIdInvisible" HorizontalAlignment="Left" Margin="69,73,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
    </Grid>
</Window>

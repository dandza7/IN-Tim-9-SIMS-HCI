<Window x:Class="WpfApp1.View.ExecutiveMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="ExecutiveMenu" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="NavBarButton" TargetType="Button">
            <Setter Property="Background" Value="#88C6FC"></Setter>
            <Setter Property="BorderBrush" Value="#0082F0"></Setter>
            <Setter Property="Margin" Value="1"></Setter>
            <Setter Property="FontFamily" Value="Impact"></Setter>
            <Setter Property="Foreground" Value="#FEFEFF"></Setter>
            <Setter Property="BorderThickness" Value="2"></Setter>
        </Style>
        <Style x:Key="DialogModal" TargetType="Border">
            <Setter Property="Background" Value="#B9DEFE"></Setter>
            <Setter Property="BorderBrush" Value="#0082F0"></Setter>
            <Setter Property="BorderThickness" Value="2"></Setter>
            <Setter Property="Margin" Value="100 20"></Setter>
        </Style>
        <Style x:Key="FormLabel" TargetType="Label">
            <Setter Property="FontSize" Value="24"></Setter>
            <Setter Property="FontFamily" Value="Impact"></Setter>
            <Setter Property="Foreground" Value="#FEFEFF"></Setter>
            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style x:Key="FormInputBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FEFEFF"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="FontSize" Value="24"></Setter>
            <Setter Property="FontFamily" Value="Impact"></Setter>
            <Setter Property="Foreground" Value="#0082F0"></Setter>
            <Setter Property="BorderBrush" Value="#0082F0"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Padding" Value="0 10 0 10"></Setter>
        </Style>
        <Style x:Key="FormInputComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FEFEFF"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="FontSize" Value="24"></Setter>
            <Setter Property="FontFamily" Value="Impact"></Setter>
            <Setter Property="Foreground" Value="#0082F0"></Setter>
            <Setter Property="BorderBrush" Value="#0082F0"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Padding" Value="0 10 0 10"></Setter>
        </Style>
        <Style x:Key="ClassicButton" TargetType="Button">
            <Setter Property="Background" Value="#0082F0"></Setter>
            <Setter Property="BorderBrush" Value="#88C6FC"></Setter>
            <Setter Property="FontSize" Value="25"></Setter>
            <Setter Property="FontFamily" Value="Impact"></Setter>
            <Setter Property="Foreground" Value="#FEFEFF"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
        </Style>
        <Style x:Key="Title" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="28"></Setter>
            <Setter Property="FontFamily" Value="Impact"></Setter>
            <Setter Property="Foreground" Value="#FEFEFF"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Name="ListButton" Grid.Row="0" Grid.Column="0" Style="{StaticResource NavBarButton}" Click="ListButton_Click" FontSize="30">Show rooms</Button>
        <Button Name="AddButton" Grid.Row="0" Grid.Column="1" Style="{StaticResource NavBarButton}" Click="AddButton_Click" FontSize="30">Add room</Button>
        <Button Name="EditButton" Grid.Row="0" Grid.Column="2" Style="{StaticResource NavBarButton}" Click="EditButton_Click" FontSize="30">Edit room type</Button>
        <Button Name="DeleteButton" Grid.Row="0" Grid.Column="3" Style="{StaticResource NavBarButton}" Click="DeleteButton_Click" FontSize="30">Delete room</Button>

        <Border Name="AddContainer" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="4" Style="{StaticResource DialogModal}" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="35"></ColumnDefinition>
                    <ColumnDefinition Width="10"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"></RowDefinition>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource Title}">Adding New Room</TextBlock>
                <Grid Grid.Column="1" Grid.Row="2" Margin="50 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"></RowDefinition>
                        <RowDefinition Height="3*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Nametag:" Style="{StaticResource FormLabel}"/>
                    <TextBox Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource FormInputBox}" ></TextBox>
                    <Label Grid.Column="0" Grid.Row="1" Content="Type:" Style="{StaticResource FormLabel}"/>
                    <ComboBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource FormInputComboBox}">
                        <ComboBoxItem>A</ComboBoxItem>
                        <ComboBoxItem>B</ComboBoxItem>
                        <ComboBoxItem>C</ComboBoxItem>
                    </ComboBox>
                    <Button Grid.Column="1" Grid.Row="3" Margin="40 0 60 0" Style="{StaticResource ClassicButton}">Confirm</Button>
                </Grid>

                <Button Name="XAddButton" Grid.Column="2" Grid.Row="1" Style="{StaticResource ClassicButton}" Click="XAddButton_Click">X</Button>
            </Grid>
        </Border>
        <Border Name="ListContainer" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="4" Style="{StaticResource DialogModal}" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="35"></ColumnDefinition>
                    <ColumnDefinition Width="10"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"></RowDefinition>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource Title}">Evidetion of rooms</TextBlock>
                <Button Name="XListButton" Grid.Column="2" Grid.Row="1" Style="{StaticResource ClassicButton}" Click="XListButton_Click">X</Button>
            </Grid>
        </Border>
        <Border Name="EditContainer" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="4" Style="{StaticResource DialogModal}" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="35"></ColumnDefinition>
                    <ColumnDefinition Width="10"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"></RowDefinition>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource Title}">Editing Room Type</TextBlock>
                <Grid Grid.Column="1" Grid.Row="2" Margin="50 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"></RowDefinition>
                        <RowDefinition Height="3*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Nametag:" Style="{StaticResource FormLabel}"/>
                    <ComboBox Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource FormInputComboBox}">
                        <ComboBoxItem>A</ComboBoxItem>
                        <ComboBoxItem>B</ComboBoxItem>
                        <ComboBoxItem>C</ComboBoxItem>
                    </ComboBox>
                    <Label Grid.Column="0" Grid.Row="1" Content="Type:" Style="{StaticResource FormLabel}"/>
                    <ComboBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource FormInputComboBox}">
                        <ComboBoxItem>A</ComboBoxItem>
                        <ComboBoxItem>B</ComboBoxItem>
                        <ComboBoxItem>C</ComboBoxItem>
                    </ComboBox>
                    <Button Grid.Column="1" Grid.Row="3" Margin="40 0 60 0" Style="{StaticResource ClassicButton}">Confirm</Button>
                </Grid>

                <Button Name="XEditButton" Grid.Column="2" Grid.Row="1" Style="{StaticResource ClassicButton}" Click="XEditButton_Click">X</Button>
            </Grid>
        </Border>
        <Border Name="DeleteContainer" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="4" Style="{StaticResource DialogModal}" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="35"></ColumnDefinition>
                    <ColumnDefinition Width="10"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"></RowDefinition>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource Title}">Deleting Room</TextBlock>
                <Grid Grid.Column="1" Grid.Row="2" Margin="50 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Nametag:" Style="{StaticResource FormLabel}"/>
                    <ComboBox Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource FormInputComboBox}">
                        <ComboBoxItem>A</ComboBoxItem>
                        <ComboBoxItem>B</ComboBoxItem>
                        <ComboBoxItem>C</ComboBoxItem>
                    </ComboBox>
                    <Button Grid.Column="1" Grid.Row="3" Margin="40 0 60 0" Style="{StaticResource ClassicButton}">Confirm</Button>
                </Grid>

                <Button Name="XDeleteButton" Grid.Column="2" Grid.Row="1" Style="{StaticResource ClassicButton}" Click="XDeleteButton_Click">X</Button>
            </Grid>
        </Border>
    </Grid>
</Window>
